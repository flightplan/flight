{
  "name": "flight",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/**"
  ],
  "scripts": {
    "build": "npm run build --workspace=packages",
    "build:examples": "npm run build --workspace=examples/**",
    "clean": "npm run clean --workspace=packages",
    "clean:examples": "npm run clean --workspace=examples/**",
    "lint": "eslint -c eslint.config.ts",
    "lint:fix": "eslint -c eslint.config.ts --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "npm run test:run --workspaces --if-present",
    "test:math": "npm run test -w packages/math",
    "test:render": "npm run test -w packages/render",
    "test:scene": "npm run test -w packages/scene"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-define-config": "^2.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.4.0",
    "prettier": "3.8.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^6.0.3",
    "vite": "^7.3.1"
  }
}
